<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="RoundedSpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
    </style>

    <style name="NewHabbbitSpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_bg</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
    </style>

    <style name="ActiveIndicatorShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNav.ActiveIndicator" parent="">
        <item name="android:color">@color/orange</item>
        <item name="android:height">41dp</item>
        <item name="android:width">41dp</item>
        <item name="marginHorizontal">8dp</item>
        <item name="shapeAppearance">@style/ActiveIndicatorShape</item>
    </style>

    <!-- Estilo para los items del dropdown -->
    <style name="DropdownItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <!-- Estilo para el menÃº desplegable -->
    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>
</resources>